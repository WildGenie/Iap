                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </ScrollViewer>
            <Grid x:Name="DynamicBrowser" Grid.Column="4">
                <Popup IsOpen="{Binding Path=OpenKeyboard}"
                       AllowsTransparency="True"
                       PlacementTarget="{Binding ElementName=DynamicBrowser}" VerticalOffset="300"
                       Placement="Center"
                       >
                    <keyboards:Keyboard/>
                </Popup>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
