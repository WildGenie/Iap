<UserControl x:Class="Iap.ScreenSaverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Width="1920"
          Height="1080">
        <MediaElement x:Name="ScreenSaverVideo"  LoadedBehavior="Manual" UnloadedBehavior="Stop" StretchDirection="DownOnly"/>
    </Grid>
</UserControl>
